<%@ include file="/common/taglib.jsp"%>

<script type="text/javascript" src="<c:url value='/styles/default/js/retrievePassword.js'/>"></script>



<div id="bc_forgot_pass">
<div id="bc_main_outer">
	<div id="bc_main_mid">
		<div class="bc_main_inner clear-both">
			<div id="forgot_pass_dialog">

				<div class="bc_light_box"><div class="bc_lb-tr"><div class="bc_lb-bl"><div class="bc_lb-br"><div class="bc_lb-content">
					<h2>Having trouble accessing your account?</h2>
					<p>Forgot your password? Enter the email address associated with your account below.
					<br/>We will reset your password and send you an email with the new one. Note that no one from MyOwnBriefcase will ever ask you for your password.</p>
					<s:form>
						<h5>Your Email</h5>
						<span class="input_gi"><span class="input_gi-l"><span class="input_gi-r"><input type="text" class="txt" name="user.email" id="emailId"/></span></span></span>
						<div id="failure_notification_id"></div>
						<br />
						<img class="img_submit" onclick="return retrievePassword();" src="${ctx}/styles/default/images/red_retrieve_pass_btn-up.png" />
						<div id="mail_sent_notification"></div>					
					</s:form>
					<br class="clear-both" />
				</div></div></div></div></div>
			</div>
			<br class="clear-both" />
		</div>
	</div>
</div>

<br class="clear-both" />
</div>

