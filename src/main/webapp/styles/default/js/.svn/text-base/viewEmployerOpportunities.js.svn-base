/* view Employer opportunity  */

function viewOpportunity(id){
document.getElementById("viewOppId"+id).href= "viewEmployerOwnOpportunities.action?Opportunityid="+id;
}

/* End of view Employer Opportunity */


function  showAboutUs(){
	$("#aboutId").css({ 'color': '#B2B2B2', 'background-color': 'white' });
	$("#whyWorkId").css({ 'color': 'white', 'background-color': '#B2B2B2' });
	$("#workCulId").css({ 'color': 'white', 'background-color': '#B2B2B2' });

	$("#aboutUsID").show();
	$("#whyWorkHereId").hide();
	$("#workCultureId").hide();
}
function  showWorkCulture(){
	$("#workCulId").css({ 'color': '#B2B2B2', 'background-color': 'white' });
	$("#aboutId").css({ 'color': 'white', 'background-color': '#B2B2B2' });
	$("#whyWorkId").css({ 'color': 'white', 'background-color': '#B2B2B2' });
	
	$("#workCultureId").show();
	$("#aboutUsID").hide();
	$("#whyWorkHereId").hide();
	
}

function showWhyWorkHere(){
	$("#whyWorkId").css({ 'color': '#B2B2B2', 'background-color': 'white' });
	$("#workCulId").css({ 'color': 'white', 'background-color': '#B2B2B2' });
	$("#aboutId").css({ 'color': 'white', 'background-color': '#B2B2B2' });
	
	$("#whyWorkHereId").show();
	$("#aboutUsID").hide();
	$("#workCultureId").hide();
}