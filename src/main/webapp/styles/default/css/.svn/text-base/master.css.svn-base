/*--Main Image Preview--*/
.main_image {
	width: 602px; height: 436px;
	float: left;
	background: #fff;
	position: relative;
	overflow: hidden;
	color: #fff;
	margin-top: 12px;
}
.main_image h3 {
	#font-size: 2em;
	font-weight: normal;
	margin: 0 0 5px;	
	padding: 10px;
}
.main_image p {
	font-size: 1.2em;
	padding: 10px;	margin: 0;
	line-height: 1.6em;
}
.block small { 
	padding: 0 0 0 20px; 
	background: url(../images/icon_calendar.gif) no-repeat 0 center; 
	font-size: 1em; 
}
.main_image .block small {margin-left: 10px;}
.main_image .desc{
	position: absolute;
	bottom: 0;	left: 0;
	width: 100%;
	display: none;
}
.main_image .block{
	width: 100%;
	background: #111;
	border-top: 1px solid #000;
}
.main_image a.collapse {
	background: url(../images/button_learnmore.png) no-repeat left top;
	height: 32px; width: 118px;
	text-indent: -99999px;
	position: absolute; 
	top: -225px; right: 440px; 
	cursor: pointer;
}
a.close {
	background: url(../images/x.png) no-repeat left top;
	height: 18px; width: 18px;
	text-indent: -99999px;
	position: absolute; 
	top: 10px; right: 10px;
	display: block;
	z-index: 10; 
	cursor: pointer;
}
.main_image a.show {
	visibility: hidden;
} 


.image_thumb {
	float: left;
	width: 51px;
	background: #f0f0f0;
	border-right: 0px solid #fff;
	border-top: 0px solid #ccc;
	margin-top: 12px;
}
.image_thumb img {
	border: 0px solid #ccc; 
	padding: 0px; 
	background: #fff; 
	float: left;
}
.image_thumb ul {
	margin: 0; padding: 0;
	list-style: none;
}
.image_thumb ul li{
	margin: 0; padding: 0px 0px;
	background: #f0f0f0 url(../images/nav_a.gif) repeat-x;
	width: 51px;
	float: left;
	border-bottom: 0px solid #ccc;
	border-top: 0px solid #fff;
	border-right: 0px solid #ccc;
}
.image_thumb ul li.hover {
	background: #ddd;
	cursor: pointer;
}
.image_thumb ul li.active {
	background: #fff;
	cursor: default;
}
html .image_thumb ul li h2 {
	font-size: 1.5em; 
	margin: 5px 0; padding: 0;
}
.image_thumb ul li .block {
	float: left; 
	margin-left: 0px;
	padding: 0;
}	
.image_thumb ul li p{display: none;}
.image_thumb ul li h3 {display: none;}


